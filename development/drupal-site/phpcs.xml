<?xml version="1.0"?>
<ruleset name="Drupal PHPDoc Enforcement">
  <description>Drupal coding standards with enforced PHPDoc comments</description>

  <!-- Load Drupal and DrupalPractice standards -->
  <rule ref="Drupal"/>
  <rule ref="DrupalPractice"/>

  <!-- Target only custom module files -->
  <file>web/modules/custom</file>

  <arg name="extensions" value="php,module,inc,install,test,profile,theme"/>
</ruleset>